@using OnlineAPI.Entities
@model List<OnlineAPI.Entities.ProjectViewModel>
@{
    ViewData["Title"] = "Мои проекты";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Мои проекты - TaskFlow</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/taskboard.css">
    <style>
        .user-dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-toggle {
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            right: 0;
            top: 100%;
            background: white;
            min-width: 200px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            border-radius: 8px;
            padding: 8px 0;
            z-index: 1000;
            margin-top: 10px;
            border: 1px solid #e1e5e9;
        }

            .user-dropdown:hover .dropdown-menu,
            .dropdown-menu:hover {
                display: block;
            }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 16px;
            color: #172b4d;
            text-decoration: none;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.2s;
        }

            .dropdown-item:hover {
                background-color: #f4f5f7;
            }

        .dropdown-divider {
            height: 1px;
            background-color: #e1e5e9;
            margin: 6px 0;
        }

        .user-info {
            padding: 12px 16px;
            border-bottom: 1px solid #e1e5e9;
            margin-bottom: 8px;
        }

        .user-name {
            font-weight: 600;
            color: #172b4d;
            font-size: 14px;
        }

        .user-role {
            color: #6b778c;
            font-size: 12px;
            margin-top: 2px;
        }

        .dropdown-item-form {
            margin: 0;
            padding: 0;
        }

            .dropdown-item-form button {
                border: none;
                background: none;
                width: 100%;
                text-align: left;
                cursor: pointer;
                font: inherit;
            }
        .projects-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 25px;
        }

        .projects-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e1e5e9;
        }

        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .project-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 25px;
            transition: transform 0.2s, box-shadow 0.2s;
            border: 1px solid #e1e5e9;
        }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        .project-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 15px;
        }

        .project-title {
            font-size: 18px;
            font-weight: 600;
            color: #172b4d;
            margin-bottom: 5px;
        }

        .project-role {
            background: #e9f2ff;
            color: #0052cc;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }

        .project-role.owner {
            background: #e3fcef;
            color: #006644;
        }

        .project-description {
            color: #6b778c;
            font-size: 14px;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .project-stats {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            padding-top: 15px;
            border-top: 1px solid #f4f5f7;
        }

        .stat {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: #6b778c;
        }

        .project-actions {
            display: flex;
            gap: 10px;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 13px;
        }

        .limits-info {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 25px;
            border-left: 4px solid #667eea;
        }

        .limits-stats {
            display: flex;
            gap: 30px;
            margin-top: 10px;
        }

        .limit-stat {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }

        .limit-value {
            font-weight: 600;
            color: #172b4d;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6b778c;
        }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 20px;
            color: #dfe1e6;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="logo">
                <h1><i class="fas fa-tasks"></i> <span>TaskFlow</span></h1>
            </div>
            <ul class="nav-menu">
                <li><a href="@Url.Action("Index", "Projects")" class="active"><i class="fas fa-layer-group"></i> <span>Проекты</span></a></li>
                <li><a href="@Url.Action("Index", "Profile")"><i class="fas fa-user"></i> <span>Профиль</span></a></li>
            </ul>
        </div>

        <div class="main-content">
            <div class="top-bar">
                <div></div>
                <div class="user-actions">
                    <div class="user-dropdown">
                        <div class="dropdown-toggle">
                            <div class="avatar">
                                @((User.FindFirst("DisplayName")?.Value ?? User.Identity.Name)?[0].ToString().ToUpper())
                            </div>
                            <i class="fas fa-chevron-down" style="font-size: 12px; color: #6b778c;"></i>
                        </div>
                        <div class="dropdown-menu">
                            <div class="user-info">
                                <div class="user-name">@(User.FindFirst("DisplayName")?.Value ?? User.Identity.Name)</div>
                                <div class="user-role">Пользователь</div>
                            </div>
                            <a href="@Url.Action("Index", "Profile")" class="dropdown-item">
                                <i class="fas fa-user"></i>
                                <span>Мой профиль</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <form method="post" asp-action="Logout" asp-controller="Auth" class="dropdown-item-form">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Выйти</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="projects-container">
                <div class="projects-header">
                    <div>
                        <h2>Мои проекты</h2>
                        <p style="color: #6b778c; margin-top: 5px;">Управление вашими проектами и задачами</p>
                    </div>
                    @if (ViewBag.CanCreateProject)
                    {
                        <a href="@Url.Action("Create", "Projects")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Создать проект
                        </a>
                    }
                </div>

                <!-- Информация о лимитах -->
                <div class="limits-info">
                    <h4 style="margin-bottom: 10px;">Лимиты проектов</h4>
                    <div class="limits-stats">
                        <div class="limit-stat">
                            <i class="fas fa-folder-plus" style="color: #667eea;"></i>
                            <span>Создано проектов:</span>
                            <span class="limit-value">@ViewBag.OwnedProjectsCount / @ViewBag.MaxOwnedProjects</span>
                        </div>
                        <div class="limit-stat">
                            <i class="fas fa-users" style="color: #667eea;"></i>
                            <span>Участвую в проектах:</span>
                            <span class="limit-value">@ViewBag.TotalProjectsCount / @ViewBag.MaxProjects</span>
                        </div>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    </div>
                }

                @if (Model.Any())
                {
                    <div class="projects-grid">
                        @foreach (var projectViewModel in Model)
                        {
                            var project = projectViewModel.Project;
                            <div class="project-card">
                                <div class="project-header">
                                    <div style="flex: 1;">
                                        <div class="project-title">@project.Name</div>
                                        <div class="project-role @(projectViewModel.UserRole.ToString().ToLower())">
                                            @(projectViewModel.UserRole == ProjectRole.Owner ? "Владелец" : "Участник")
                                        </div>
                                    </div>
                                    <div style="color: #6b778c; font-size: 12px;">
                                        @project.CreatedDate.ToString("dd.MM.yyyy")
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(project.Description))
                                {
                                    <div class="project-description">
                                        @project.Description
                                    </div>
                                }

                                <div class="project-stats">
                                    <div class="stat">
                                        <i class="fas fa-tasks"></i>
                                        <span>@projectViewModel.TaskCount задач</span>
                                    </div>
                                    <div class="stat">
                                        <i class="fas fa-users"></i>
                                        <span>@projectViewModel.MemberCount участников</span>
                                    </div>
                                </div>

                                <div class="project-actions">
                                    <a href="@Url.Action("Index", "Tasks", new { projectId = project.Id })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-th-large"></i> Открыть доску
                                    </a>
                                    <a href="@Url.Action("Details", "Projects", new { id = project.Id })" class="btn btn-outline btn-sm">
                                        <i class="fas fa-info-circle"></i> Подробнее
                                    </a>
                                    @if (projectViewModel.UserRole == ProjectRole.Owner)
                                    {
                                        <form method="post" action="@Url.Action("Delete", "Projects", new { id = project.Id })"
                                              onsubmit="return confirm('Вы уверены, что хотите удалить этот проект? Все задачи будут удалены.')"
                                              style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline btn-sm" style="color: #dc3545; border-color: #dc3545;">
                                                <i class="fas fa-trash"></i> Удалить
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-layer-group"></i>
                        <h3>У вас пока нет проектов</h3>
                        <p style="margin-bottom: 20px;">Создайте свой первый проект для управления задачами</p>
                        @if (ViewBag.CanCreateProject)
                        {
                            <a href="@Url.Action("Create", "Projects")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Создать первый проект
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>