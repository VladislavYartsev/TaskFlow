@{
    ViewData["Title"] = "SuperAdmin Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SuperAdmin - TaskFlow</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1f2933 0%, #4c1d95 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-container {
            background: white;
            padding: 42px;
            border-radius: 14px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.35);
            width: 100%;
            max-width: 420px;
            border-top: 6px solid #7c3aed;
        }

        .logo {
            text-align: center;
            margin-bottom: 25px;
        }

            .logo h1 {
                color: #4c1d95;
                font-size: 26px;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
            }

        .subtitle {
            text-align: center;
            font-size: 14px;
            color: #6b7280;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #374151;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e5e7eb;
            border-radius: 6px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                outline: none;
                border-color: #7c3aed;
            }

        .btn {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #7c3aed 0%, #4c1d95 100%);
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: transform 0.2s;
        }

            .btn:hover {
                transform: translateY(-2px);
            }

        .warning {
            margin-top: 20px;
            padding: 14px;
            background: #fef2f2;
            border-radius: 6px;
            border-left: 4px solid #dc2626;
            color: #7f1d1d;
            font-size: 14px;
        }

        .text-danger {
            color: #dc2626;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }
    </style>
</head>

<body>

    <div class="login-container">

        <div class="logo">
            <h1><i class="fas fa-shield-halved"></i> TaskFlow</h1>
        </div>

        <div class="subtitle">
            Super Administrator Access
        </div>

        <form method="post" asp-action="Login" asp-controller="SuperAdmin">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Логин</label>
                <input name="login" class="form-control" placeholder="SuperAdmin login" required />
            </div>

            <div class="form-group">
                <label>Пароль</label>
                <input name="password" type="password" class="form-control" placeholder="Пароль" required />
            </div>

            <button type="submit" class="btn">Войти как SuperAdmin</button>

            @if (ViewBag.Error != null)
            {
                <div class="text-danger">@ViewBag.Error</div>
            }
        </form>

        <div class="warning">
            <strong>Внимание:</strong> доступ разрешён только супер-администраторам системы.
        </div>

    </div>

</body>
</html>
